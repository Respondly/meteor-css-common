@import 'core.import'



.abs-fill
  abs-pos 0, 0, 0, 0



ul.unstyled
  list-style none
  margin 0
  padding 0



.border-box
  box-sizing border-box
  &:before, &:after
    box-sizing border-box
  *, *:before, *:after
    box-sizing border-box


hr
  border none
  border-top solid 1px rgba(black, 0.15)
  margin 30px 0


legend
  font-family $SANS
  display block
  width 100%
  border-bottom solid 1px rgba(black, 0.1)
  margin-bottom 20px
  padding-bottom 5px
  color darken(white, 70%)
  font-weight 700
  font-size 22px
  letter-spacing -0.5px
