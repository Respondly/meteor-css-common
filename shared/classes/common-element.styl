@import 'core.import'


hr
  border none
  border-top solid 1px rgba(black, 0.15)
  margin 30px 0

// ------------------------------------------------------

legend
  font-family $SANS
  display block
  width 100%
  border-bottom solid 1px rgba(black, 0.1)
  margin-bottom 20px
  padding-bottom 5px
  color darken(white, 70%)
  font-weight 700
  font-size 22px
  letter-spacing -0.5px

// ------------------------------------------------------

fieldset
  border none

// ------------------------------------------------------


code, pre
  padding 0 3px 2px
  font-family $MONO_SPACE
  font-size 12px
  color #333333
  border-radius 3px
  text-shadow none
  text-decoration none



