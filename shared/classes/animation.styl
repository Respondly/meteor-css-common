@import 'core.import'



@keyframes core-rotate-clockwise
  0%
    transform rotate(0deg)
  100%
    transform rotate(360deg)




@keyframes core-rotate-counter-clockwise
  0%
    transform rotate(0deg)
  100%
    transform rotate(-360deg)

// ------------------------------------------------------------------------------------
// core-pulse
// ------------------------------------------------------------------------------------
@keyframes core-pulse
  0%
    transform: scale(1)

  50%
    transform: scale(1.1)

  100%
    transform: scale(1)

// ------------------------------------------------------------------------------------
// core-fade-in
// ------------------------------------------------------------------------------------
@keyframes core-fade-in
  0%
    opacity: 0

  100%
    opacity: 1

// ------------------------------------------------------------------------------------
// core-fade-in-up
// ------------------------------------------------------------------------------------
@keyframes core-fade-in-up
  0%
    opacity: 0
    transform: translateY(20px)

  100%
    opacity: 1
    transform: translateY(0)



// ------------------------------------------------------------------------------------
// core-fade-in-down
// ------------------------------------------------------------------------------------
@keyframes core-fade-in-down
  0%
    opacity: 0
    transform: translateY(-20px)

  100%
    opacity: 1
    transform: translateY(0)

// ------------------------------------------------------------------------------------
// core-bounce-in
// ------------------------------------------------------------------------------------
@keyframes core-bounce-in
  0%, 20%, 40%, 60%, 80%, 100%
    transition-timing-function: cubic-bezier(0.215, 0.610, 0.355, 1.000)

  0%
    opacity: 0
    transform: scale3d(.3, .3, .3)

  20%
    transform: scale3d(1.1, 1.1, 1.1)

  40%
    transform: scale3d(.9, .9, .9)

  60%
    opacity: 1
    transform: scale3d(1.03, 1.03, 1.03)

  80%
    transform: scale3d(.97, .97, .97)

  100%
    opacity: 1
    transform: scale3d(1, 1, 1)