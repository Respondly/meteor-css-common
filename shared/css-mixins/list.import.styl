@import 'core.import'


// Google material blue.
// http://www.google.com/design/spec/style/color.html#color-color-palette
$LIST_ITEM_BLUE = #2196F3




list-item-selected-bg()
  background rgba(black, 0.08)
  border solid 1px rgba(black, 0.04)



list-item-focused-bg-blue()
  BLUE = $LIST_ITEM_BLUE
  background BLUE
  border solid 1px darken(BLUE, 10%)



list-item-focused-blue()
  list-item-focused-bg-blue()
  color white
  text-shadow 0px 1px rgba(black, 0.4)
